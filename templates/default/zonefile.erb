$TTL <%= @global_ttl %>
@ IN SOA <%= @soa %> <%= @contact %> (
                <%= @serial %> ; serial [yyyyMMddNN]
                4H      ; refresh
                30M     ; retry
                1W      ; expiry
                1D      ; minimum
);

                           IN    NS <%= @soa %>
<% @nameserver.each do |ns| -%>
                           IN    NS <%= ns %>
<% end %>

<% if @mail_exchange -%>
<% @mail_exchange.each do |mx| -%>
                           IN    MX <%= mx['priority'] %> <%= mx['host'] %>
<% end %>
<% end %>

                           IN     A <%= node['ipaddress'] %>
ns                         IN     A <%= node['ipaddress'] %>

<% if @records -%>
<% @records.each do |record| -%>
<%= "%-20s %5s IN %5s %s" % [record['name'],record['ttl'],record['type'],record['ip']] %>
<% end %>
<% end %>
